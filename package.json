{
  "name": "@rheactorjs/server",
  "description": "Core server components for RHeactorJS applications",
  "version": "0.0.0-development",
  "scripts": {
    "lint": "standard",
    "dev-server": "environment=development nodemon --exec babel-node -e js -w ./src -d 1 test/server.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=5000 test/\\*\\*/\\*.js",
    "test:api": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=5000 test/yadda/\\*\\*/\\*.js",
    "test:backend": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=5000 test/mocha/\\*\\*/\\*.js",
    "test:coverage": "NODE_ENV=nyc babel src --out-dir instrumented-src > /dev/null && nyc --reporter=text-summary --reporter=lcov npm run test",
    "test:coverage-travis": "npm run test:coverage && codeclimate-test-reporter < ./coverage/lcov.info && rm -rf ./coverage",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RHeactorJS/server.git"
  },
  "author": "Resourceful Humans GmbH <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RHeactorJS/server/issues"
  },
  "homepage": "https://github.com/RHeactorJS/server#readme",
  "dependencies": {
    "@rheactorjs/bdd-contexts": "^2.0.0",
    "@rheactorjs/errors": "1.x",
    "@rheactorjs/event-store": "^3.0.1",
    "@rheactorjs/models": "^2.0.1",
    "@rheactorjs/template-mailer-client": "1.x",
    "@rheactorjs/value-objects": "^1.0.2",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.4.6",
    "body-parser": "^1.18.1",
    "colors": "^1.1.2",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "fast-url-parser": "^1.1.3",
    "glob": "^7.1.0",
    "joi": "^11.0.2",
    "jsonwebtoken": "^8.0.1",
    "keypair": "^1.0.0",
    "lodash": "^4.16.1",
    "moment": "^2.15.1",
    "nconf": "^0.8.4",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "redis": "^2.8.0",
    "request": "^2.82.0",
    "request-promise": "^4.1.1",
    "tcomb": "^3.2.24"
  },
  "devDependencies": {
    "@rheactorjs/yadda-feature-runner": "1.x",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "husky": "^0.14.3",
    "juice": "^4.1.1",
    "lolex": "^2.1.2",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "semantic-release": "^8.0.0",
    "showdown": "^1.7.4",
    "standard": "^10.0.3",
    "superagent": "^3.6.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0",
    "yadda": "^1.4.0"
  },
  "files": [
    "dist",
    "src",
    "features",
    "README.md"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=6.10.2"
  }
}
